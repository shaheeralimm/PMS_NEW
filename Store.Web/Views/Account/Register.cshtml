@model Store.Web.ViewModels.RegisterFormViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_layoutLogin.cshtml";
}

<div id="signupform">
    <div>
        <div class="text-center p-t-20 p-b-20">
            <span class="db"><img src="~/Content/layout/assets/images/logo.png" alt="logo" /></span>
        </div>
        <!-- Form -->
        <form class="col-12" action="Register" method="post" id="frmRegister">
            <div class="row p-b-30">
                <div class="col-12">
                    <!-- email -->
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-danger text-white" id="basic-addon1"><i class="ti-email"></i></span>
                        </div>
                        @Html.TextBoxFor(s => s.Email, new { @class = "required form-control", @placeholder = "Email Address", required = "required" })
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(e => e.Email)
                        </div>
                       
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-warning text-white" id="basic-addon2"><i class="ti-pencil"></i></span>
                        </div>
                        @Html.PasswordFor(s => s.Password, new { @class = "required form-control", @placeholder = "Password", required = "required" })
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(e => e.Password)
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-info text-white" id="basic-addon2"><i class="ti-pencil"></i></span>
                        </div>
                        @Html.PasswordFor(s => s.ComparePassword, new { @class = "required form-control", @placeholder = "Password", required = "required" })
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(e => e.ComparePassword)
                        </div>
                    </div>
                </div>
            </div>
            <div class="row border-top border-secondary">
                <div class="col-12">
                    <div class="form-group">
                        <div class="p-t-20">
                            <button class="btn btn-block btn-lg btn-info" type="submit">Sign Up</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
